@using BlogProject.ViewModels
@model ContactMe

@{
    ViewData["Title"] = "Contact";
    var pageNumber = @TempData["PageNumber"];
}

<div class="container-fluid justify-content-center">
    <div class="row">
        <div class="col-lg-6 col-md-10 mx-auto">
            <p>Want to get in touch? Fill out the form below to send me a message and I will get back to you as soon as possible!</p>
            <form asp-action="Contact" asp-route-page="@pageNumber">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Name">Name</label>
                        <input type="text" class="form-control" placeholder="Name" asp-for="Name" required data-validation-required-message="Please enter your name.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label asp-for="Email">Email Address</label>
                        <input type="email" class="form-control" placeholder="Email Address" asp-for="Email" required data-validation-required-message="Please enter your email address.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Phone Number</label>
                        <input type="tel" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber" required data-validation-required-message="Please enter your phone number.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label>Subject</label>
                        <input class="form-control" placeholder="Subject" asp-for="Subject" required data-validation-required-message="Please enter your phone number.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        <label asp-for="Message"></label>
                        <textarea asp-for="Message" class="form-control" id="Message" cols="30" rows="10"></textarea>
                    </div>
                </div>
                <br>
                <div id="success"></div>
                <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        //Summernote
        $('#Message').summernote({
            placeholder: ""
        });

        //Sweet alert
        var swalMsg = '@TempData["SweetAlert"]'
        if (swalMsg != "") {
            Swal.fire({
                icon: '@TempData["SwalIcon"]',
                title: swalMsg,
                timer: 5000
            })
        }
    </script>
}
